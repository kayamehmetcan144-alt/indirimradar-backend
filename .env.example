# .env.example - Environment variables template
# Railway dashboard'da bu değerleri ayarlayın

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=production
FLASK_APP=app.py

# Database (Railway otomatik sağlayacak)
DATABASE_URL=postgresql://user:password@host:port/database

# CORS (Frontend domain'leri)
ALLOWED_ORIGINS=https://indirimradar.com,https://www.indirimradar.com

# JWT
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=2592000

# API Rate Limiting
RATE_LIMIT_PER_HOUR=1000

# Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_INTERVAL_HOURS=6

# Admin Configuration
ADMIN_EMAIL=admin@indirimradar.com

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=INFO
